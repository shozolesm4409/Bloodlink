
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAuthenticated() {
      return request.auth != null;
    }

    function isAdmin() {
      return isAuthenticated() && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'ADMIN' || 
         request.auth.token.email == 'shozolesm4409@gmail.com');
    }

    function isEditor() {
      return isAuthenticated() && 
        (get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'EDITOR' || isAdmin());
    }

    match /password_resets/{tokenId} {
      allow read, create, delete: if true; 
      allow update: if false;
    }

    match /mail/{mailId} {
      allow create: if true; 
      allow read, update, delete: if isAdmin();
    }

    match /notices/{noticeId} {
      allow read, list: if true; 
      allow create, update: if isEditor();
      allow delete: if isAdmin(); 
    }

    match /feedbacks/{feedbackId} {
      allow read, list: if true; 
      allow create: if isAuthenticated(); 
      allow update: if isEditor(); 
      allow delete: if isAdmin(); 
    }

    match /settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin(); 
    }

    match /users/{userId} {
      allow read, list: if true;
      allow create: if true;
      allow update: if isAuthenticated() && (request.auth.uid == userId || isEditor());
      allow delete: if isAdmin();
    }
    
    match /donations/{donationId} {
      allow read, list: if true;
      allow create: if isAuthenticated();
      allow update: if isEditor();
      allow delete: if isEditor();
    }

    match /messages/{messageId} {
      allow read, list, write: if isAuthenticated();
    }

    match /logs/{logId} {
      allow read, list: if isEditor();
      allow create: if isAuthenticated();
      allow delete: if isEditor();
    }

    match /verification_logs/{logId} {
      allow read, list: if isAdmin();
      allow create: if true; 
    }

    match /deleted_users/{docId} {
      allow read, write: if isAdmin();
    }
    
    match /deleted_donations/{docId} {
      allow read, write: if isEditor();
    }

    match /deleted_logs/{docId} {
      allow read, write: if isEditor();
    }

    match /deleted_feedbacks/{docId} {
      allow read, write: if isAdmin(); 
    }

    match /deleted_notices/{docId} {
      allow read, write: if isAdmin(); 
    }

    match /revoked_permissions/{docId} {
      allow read, write: if isAdmin();
    }

    match /{path=**} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
  }
}
